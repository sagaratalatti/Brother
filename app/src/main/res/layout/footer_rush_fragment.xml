<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    
    <View
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:id="@+id/footer_rush_line1"
        android:background="#000"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/footer_rush_followUs"
        android:text="@string/follows_us"
        android:layout_below="@id/footer_rush_line1"
        android:textColor="#000"
        android:layout_centerHorizontal="true"/>

    <View
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:id="@+id/footer_rush_line2"
        android:background="#000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/footer_rush_followUs"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/footer_rush_line2">

        <ImageView
            android:id="@+id/footer_facebook"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.15"/>

        <ImageView
            android:id="@+id/footer_twitter"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.15"/>

        <ImageView
            android:id="@+id/footer_snapchat"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.15"/>

        <ImageView
            android:id="@+id/footer_instagram"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.15"/>

    </LinearLayout>


</RelativeLayout>